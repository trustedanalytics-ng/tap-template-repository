{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }    
  },
  "spec": {
    "type": "NodePort",
    "selector": {
      "service_id": "$service_id"
    },
    "ports": [  
      {
	"name": "kibana",
	"protocol": "TCP",
	"port": 5601
      },
      {
	"name": "rest",
	"protocol": "TCP",
	"port": 9200
      },      
      {
        "name": "transport",
	"protocol": "TCP",
	"port": 9300
      }      
    ]
  }
}
