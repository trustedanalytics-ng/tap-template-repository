{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "$idx_and_short_serviceid",
    "labels": {
      "org": "$org",
      "space": "$space",
      "catalog_service_id": "$catalog_service_id",
      "catalog_plan_id": "$catalog_plan_id",
      "service_id": "$service_id",
      "idx_and_short_serviceid": "$idx_and_short_serviceid",
      "managed_by": "TAP"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels" : {
        "service_id": "$service_id",
        "idx_and_short_serviceid": "$idx_and_short_serviceid"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "service_id": "$service_id",
          "idx_and_short_serviceid": "$idx_and_short_serviceid",
          "managed_by": "TAP"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "k-nginx",
            "image": "nginx",
            "resources": {
              "limits": {
                "memory": "500M"
              },
              "requests": {
                "memory": "100M"
              }
            },
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "env": [
	      { "name": "MANAGED_BY", "value":"TAP" },
	      { "name": "USERNAME",
            "valueFrom": {
              "secretKeyRef": {
                "name": "$short_serviceid-nginx-credentials",
                "key": "username"
              }
            }
          },
	      { "name": "PASSWORD",
            "valueFrom": {
              "secretKeyRef": {
                "name": "$short_serviceid-nginx-credentials",
                "key": "password"
              }
            }
          },
	      { "name": "DBNAME",
            "valueFrom": {
              "secretKeyRef": {
                "name": "$short_serviceid-nginx-credentials",
                "key": "dbname"
              }
            }
          }
	    ],
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}